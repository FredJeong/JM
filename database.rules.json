{
  "rules": {
    "user": {
      ".write": "root.child('user').child(auth.uid).child('admin').val() == true || !data.exists()",
      "$user_id": {
        "group": {
          ".read": "auth != null"
        },
        "emali": {
          ".write": "!data.exists()"
        },
        "name": {
          ".write": "!data.exists()"
        },
        "solved": {
          ".write": "$user_id === auth.uid"
        }
      }
    },
    "group": {
      "$group_id": {
        "name": {
          ".validate": "!data.exists()"
        }
      }
    },
    ".read": "auth != null",  
    ".write": "root.child('user').child(auth.uid).child('admin').val() == true"
  }
}
